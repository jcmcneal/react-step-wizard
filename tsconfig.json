{
    "compilerOptions": {
        "target": "ES5",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "jsx": "react",
        "lib": ["DOM", "ESNext"],
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "allowJs": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@/types/*": ["src/types/*"]
        },
        "plugins": [{ "name": "typescript-plugin-css-modules" }]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
